@* Create.cshtml *@
@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h3 {
        margin-bottom: 20px;
        color: #333;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
            font-size: 1rem;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #66afe9;
            outline: none;
            box-shadow: 0 0 5px rgba(102, 175, 233, 0.5);
        }

    .row {
        display: flex;
        gap: 10px;
    }

    .col-md-6 {
        flex: 1;
    }

    .btn-success {
        background-color: #d4af37;
        border-color: #d4af37;
        color: #fff;
        padding: 10px 20px;
        border-radius: 10px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
    }

        .btn-success:hover {
            background-color: #b8912f;
            border-color: #b8912f;
        }

    /* Attendees Tags */
    .attendee-tag {
        display: inline-block;
        background-color: #e0e0e0;
        border-radius: 20px;
        padding: 5px 15px;
        margin: 5px;
        font-size: 0.9rem;
    }

        .attendee-tag i {
            margin-left: 10px;
            cursor: pointer;
        }

    /* Added for the dropdown */
    .attendee-dropdown {
        margin-bottom: 10px;
    }
</style>

<div class="container">
    <h3>Type Event Title</h3>
    <form id="event-form">
        <div class="form-group">
            <label>Time</label>
            <div class="row">
                <div class="col-md-6">
                    <input type="date" class="form-control" value="2023-08-11" />
                </div>
                <div class="col-md-3">
                    <input type="time" class="form-control" value="14:30" />
                </div>
                <div class="col-md-3">
                    <input type="time" class="form-control" value="17:30" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Repeat</label>
            <select class="form-control">
                <option>Don't repeat</option>
                <option>Daily</option>
                <option>Weekly</option>
                <option>Monthly</option>
                <option>Yearly</option>
            </select>
        </div>

        <div class="form-group">
            <label>Location</label>
            <input type="text" class="form-control" placeholder="Location" />
        </div>

        <div class="form-group">
            <label>Attendees</label>
            <!-- Dropdown for selecting attendees -->
            <div class="attendee-dropdown">
                <select class="form-control" id="attendee-select">
                    <option value="">Select Attendee</option>
                    <option value="Mohammad">Mohammad</option>
                    <option value="Ahmed">Ahmed</option>
                    <option value="Sara">Sara</option>
                    <option value="John">John</option>
                </select>
            </div>
            <!-- Area to display selected attendees as tags -->
            <div id="attendees-list"></div>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" placeholder="Describe the initiative" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label>Reminder</label>
            <select class="form-control">
                <option>5 minutes before</option>
                <option>10 minutes before</option>
                <option>15 minutes before</option>
                <option>20 minutes before</option>
            </select>
        </div>

        <div class="form-group">
            <label>Label</label>
            <select class="form-control">
                <option>Holiday</option>
                <option>Meeting</option>
                <option>Event</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Attendees array to store selected attendees
        let attendees = [];

        // Event handler for adding attendees
        $('#attendee-select').on('change', function () {
            let selectedAttendee = $(this).val();

            // Check if the attendee is not already added and it's not empty
            if (selectedAttendee && !attendees.includes(selectedAttendee)) {
                attendees.push(selectedAttendee);
                updateAttendeesList();
            }

            // Reset dropdown
            $(this).val('');
        });

        // Function to update the attendee tags
        function updateAttendeesList() {
            $('#attendees-list').empty(); // Clear the list

            attendees.forEach(function (attendee, index) {
                $('#attendees-list').append(
                    `<div class="attendee-tag">${attendee} <i class="fas fa-times" data-index="${index}"></i></div>`
                );
            });
        }

        // Event handler for removing attendees
        $(document).on('click', '.attendee-tag i', function () {
            let index = $(this).data('index');
            attendees.splice(index, 1); // Remove attendee from the array
            updateAttendeesList(); // Update the display
        });
    });
</script>
